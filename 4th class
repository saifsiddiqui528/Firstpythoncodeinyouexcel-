name=input("Enter your full name:")
email=input("Enter your email:")
budget=int(input("Enter your budget amount:"))


if budget<=10000:
    print(f"Dear {name}, Welcome to casual wears, your budget is {budget}")
elif budget<=5000:
    print(f"Dear {name}, Welcome to party wears, your budget is {budget}")
elif budget>=10000:
    print(f"Dear {name}, Welcome to formal wears, your budget is {budget}")
    
else:
    print("You are not eligiable to buy cloth")


